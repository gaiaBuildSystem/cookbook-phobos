[Unit]
Description=Easy Splash Stop Service
Before=getty.target
After=getty@tty1.service network-online.target systemd-timesyncd.service
Requires=getty@tty1.service
Wants=systemd-timesyncd.service network-online.target

[Service]
Type=oneshot
ExecStartPre=/usr/bin/sleep 4
ExecStart=/usr/bin/pkill -9 mplayer

[Install]
WantedBy=default.target
