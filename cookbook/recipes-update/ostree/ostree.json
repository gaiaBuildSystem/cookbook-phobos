{
    "name": "ostree",
    "type": "config",
    "priority": 0,
    "support": [
        "linux/amd64",
        "linux/arm64"
    ],
    "env": {
        "OSTREE_GARAGE_PUSH": "true"
    },
    "hostDeps": [
        "ostree",
        "rsync",
        "asn1c",
        "build-essential",
        "cmake",
        "curl",
        "libarchive-dev",
        "libboost-dev",
        "libboost-log-dev",
        "libboost-program-options-dev",
        "libcurl4-openssl-dev",
        "libpthread-stubs0-dev",
        "libsodium-dev",
        "libsqlite3-dev",
        "python3",
        "python3-requests",
        "libglib2.0-dev",
        "file",
        "libostree-dev"
    ],
    "targetDeps": [
        "ostree",
        "rsync"
    ],
    "deployRecipes": [
        "systemd/deploy.py"
    ],
    "afterDeployRecipes": [
        "bootloader.py",
        "movekernel.py",
        "ostreewrapper.py"
    ],
    "bundleRecipes": [
        "moveinitramfs.py",
        "fixuprootfs.py",
        "createotadisk.py",
        "pushplatform.xsh"
    ]
}
